<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.helloandroid.MainActivity">

    <ImageView
        android:id="@+id/udacity_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/logo_desc"
        app:srcCompat="@drawable/udacity_logo"
        android:scaleType="fitStart"
        android:adjustViewBounds="true"/>

    <LinearLayout
        android:paddingLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/udacity_logo"
        android:orientation="vertical">

            <TextView
                android:drawableLeft="@drawable/person_icon"
                android:id="@+id/udacity"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/name"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/a1"
                android:drawableLeft="@drawable/home_icon"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/address1"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:autoLink="map"
                android:textColorLink="#223f81"/>

            <TextView
                android:drawableLeft="@drawable/phone_icon"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/phone"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:autoLink="phone"
                android:textColorLink="#223f81"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/www_icon"
                android:text="@string/web"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:autoLink="web"
                android:textColorLink="#223f81"/>

    </LinearLayout>

</RelativeLayout>
