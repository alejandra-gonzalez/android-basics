<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.happybirthday.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/bg_hearts"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:textColor="#000000"
            android:text="You are very"
            android:textSize="36sp"
            android:fontFamily="sans-serif-condensed"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/Bambi_Cartoon_Transparent_Clip_Art_Image" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:padding="20dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0dp"
            android:text="deer to me!"
            android:fontFamily="sans-serif-condensed"
            android:textSize="36sp"/>

        <TextView
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:paddingBottom="20dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Happy Valentine's Day!"
            android:fontFamily="sans-serif-condensed"
            android:textSize="36sp"/>
    </LinearLayout>
</RelativeLayout>
