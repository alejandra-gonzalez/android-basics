<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.sailingscorekeeper.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/input_instructions"
            android:textSize="17sp"
            android:padding="16dp"
            android:textColor="#000000"/>

        <EditText
            android:textColorHint="#272727"
            android:id="@+id/teamAname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/team1"
            android:gravity="center_horizontal"
            android:layout_margin="8dp"/>

        <EditText
            android:textColorHint="#272727"
            android:id="@+id/teamBname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/team2"
            android:gravity="center_horizontal"
            android:layout_margin="8dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cont"
            android:layout_margin="8dp"
            android:onClick="getTeamsNames"/>

    </LinearLayout>

</RelativeLayout>
